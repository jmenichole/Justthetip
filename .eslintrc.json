{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "security"
  ],
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "prefer-const": "warn",
    "no-var": "error",
    "security/detect-object-injection": "off",
    "security/detect-non-literal-require": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "coverage/",
    "justthetip-contracts/",
    "*.min.js",
    "*.html",
    "USER_PAID_MINTING_CODE.js"
  ],
  "overrides": [
    {
      "files": ["tests/**/*.js", "**/*.test.js", "**/*.spec.js"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["docs/**/*.js", "api/public/**/*.js"],
      "env": {
        "browser": true
      }
    }
  ]
}
